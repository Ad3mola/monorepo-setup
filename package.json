{
  "name": "my-turborepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo lint",
    "lint:commit": "turbo lint",
    "format": "turbo run format",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "type-check": "turbo type-check",
    "lint:styled": "turbo lint:styled",
    "lint:styled-commit": "turbo lint:styled"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.18",
  "husky": {
    "hooks": {
      "type-check": "yarn type-check",
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.styled.{js,ts}": [
      "eslint . --ext ts --ext tsx --ext js --fix",
      "prettier --write",
      "stylelint",
      "git add"
    ],
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint . --ext ts --ext tsx --ext js --fix",
      "git add"
    ],
    "/src/**/*.scss": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "{*.{json,md}}": [
      "prettier --write",
      "git add"
    ]
  }
}
